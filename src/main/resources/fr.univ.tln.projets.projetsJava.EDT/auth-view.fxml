<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<GridPane fx:controller="fr.univ.tln.projets.projetJava.EDT.AuthController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10" style=" -fx-background-color: #F9F7F0;">


    <!-- marge -->
<padding>
    <Insets top="100" right="40" bottom="40" left="40"  />

</padding>

<columnConstraints>

    <ColumnConstraints  minWidth="100" prefWidth="100"
                       maxWidth="Infinity" halignment="RIGHT"    ></ColumnConstraints>
    <ColumnConstraints minWidth="200" prefWidth="200"
                       maxWidth="Infinity" hgrow="ALWAYS"></ColumnConstraints>
</columnConstraints>
<!-- Add Header Label -->
<Label text="EDT" GridPane.columnIndex="0" style="-fx-text-fill: #18B7BE;"

       GridPane.rowIndex="0" GridPane.columnSpan="2"
       GridPane.rowSpan="1" GridPane.halignment="CENTER">
    <font><!-- police caracteres -->
        <Font name="Arial" size="50"  ></Font>

    </font>
    <GridPane.margin>
        <Insets top="20" right="0" bottom="20" left="0"></Insets>
    </GridPane.margin>

</Label>
<!-- Add Email Label -->
<Label text="Email" GridPane.columnIndex="0" style="-fx-text-fill: #9F496E;"
       GridPane.rowIndex="2" ></Label>
<!-- Add Email Text Field -->
<TextField fx:id="emailIdField" prefHeight="40" style="-fx-background-color: #17BCA4; "
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
<!-- Add Password Label -->
<Label text="Mot de passe " style="-fx-text-fill: #9F496E;" GridPane.columnIndex="0"
       GridPane.rowIndex="3" ></Label>
<!-- Add Password Field -->
<PasswordField fx:id="passwordField" prefHeight="40" style="-fx-background-color:#17BCA4 ;"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
<!-- Add Submit Button -->
<Button fx:id="submitButton" text="login" style="-fx-text-fill: #F9F7F0; -fx-background-color: #178CA4"
        prefWidth="100" prefHeight="40" defaultButton="true"
        GridPane.columnIndex="0" GridPane.rowIndex="4"
        GridPane.columnSpan="2" GridPane.rowSpan="1"
        GridPane.halignment="CENTER"
        onAction="#login">
    <GridPane.margin>
        <Insets top="20" right="0" bottom="20" left="0"></Insets>
    </GridPane.margin>
</Button>
</GridPane>